#1
x=input('Введите текст: \n')
i=0
for a in x.split(" "):
    if a.strip()[0]=='е':
        i+=1
print(i)

#2
x=input("Введите ':'\n")
i=x.replace(":","%")
print(i,"\n","кол-во замен =",i.count('%') )

#3
a = input('Введите текст \n')
i = a.replace('.', '')
print("кол-во удаленных = ", len(a) - len(i))
print("итог = ",i)

