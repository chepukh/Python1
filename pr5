#12
x=input('Введите предложение: \n')
i=0
for a in x.split(" "):
    if a.strip()[-1]=='я':
        i+=1
print(i)

#13
i=input("Введите предложение со скобками\n")
x=i.replace('(','').replace(')','')
print(x)

#14
x=input('Введите предложение: \n')
for a in x.split(" "):
    if a.strip()[0]=='а' and a.strip()[-1]=='я' :
        print(a)
